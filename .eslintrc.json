{
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "commonjs": true,
        "mocha": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "space-unary-ops": [
            "error",
            {
                "overrides": {
                    "!": true
                }
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "space-in-parens": "off",
        "func-names": [
            "error",
            "as-needed"
        ]
    }
}
